{
  "manifest_version": 3,
  "name": "코드잽 익스텐션",
  "version": "0.0.5",
  "description": "코드잽 템플릿 업로드를 도와주는 익스텐션입니다.",
  "permissions": ["contextMenus", "storage", "scripting", "activeTab"],
  "host_permissions": ["https://code-zap.com/*", "https://www.code-zap.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "js": ["contentScript.js"],
      "matches": ["https://code-zap.com/*", "https://www.code-zap.com/*"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "코드잽 익스텐션",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "options_page": "options.html"
}
